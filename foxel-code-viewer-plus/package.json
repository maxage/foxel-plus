{
  "name": "foxel-code-viewer-plus",
  "version": "1.0.0",
  "description": "A comprehensive code viewer plugin for Foxel with syntax highlighting, preview, themes, and advanced features",
  "main": "dist/plugin.js",
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --format=iife --platform=browser --target=es2019 --jsx=automatic --minify --outfile=dist/plugin.js --define:process.env.NODE_ENV='\"production\"' --define:PLUGIN_VERSION='\"'$npm_package_version'\"' --define:PLUGIN_AUTHOR='\"'$npm_package_author'\"' --external:prismjs --external:marked --external:dompurify",
    "dev": "esbuild src/index.tsx --bundle --format=iife --platform=browser --target=es2019 --jsx=automatic --outfile=dist/plugin.js --watch",
    "clean": "rm -rf dist",
    "validate": "node validate-plugin.js"
  },
  "keywords": [
    "foxel",
    "plugin",
    "code",
    "viewer",
    "syntax",
    "highlighting",
    "preview",
    "markdown",
    "html",
    "editor"
  ],
  "author": "Jason",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "esbuild": "^0.25.9",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "prismjs": "^1.29.0",
    "marked": "^9.1.6",
    "dompurify": "^3.0.5"
  }
}
